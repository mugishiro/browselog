{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": false,
        "declarationMap": false,
        "sourceMap": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable", "WebWorker"],
        "types": ["chrome", "node"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
